<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.tagnfckotlin.MainActivity">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="118dp"
        android:layout_height="72dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-1dp"
        android:src="@drawable/logo" />

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/logo"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="108dp"
        android:layout_marginRight="20dp"
        android:gravity="center_horizontal"
        android:text="Avvicinare il retro dello smartphone al tag NFC"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/igienizza"
        android:layout_width="51dp"
        android:layout_height="51dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="150dp"
        android:layout_marginTop="488dp"
        android:layout_marginBottom="104dp"
        android:text="Igienizza"
        android:visibility="invisible"
        tools:visibility="invisible" />

    <TextView
        android:id="@+id/intro_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="151dp"
        android:layout_marginBottom="381dp"
        android:text="Descrizione"
        android:textAlignment="center"
        android:textSize="18sp"
        android:visibility="invisible"
        tools:visibility="invisible" />

    <TextView
        android:id="@+id/tagId_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:text=""
        android:textSize="18sp"
        android:visibility="invisible"
        tools:visibility="invisible" />

    <TextView
        android:id="@+id/message_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="174dp"
        android:text="Si prega di allontanarsi, postazione al momento non disponibile"
        android:textSize="16sp"
        android:visibility="invisible"
        tools:visibility="invisible" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="303dp"
        android:layout_height="165dp"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="215dp"
        android:visibility="invisible"
        tools:visibility="invisible">

    </androidx.recyclerview.widget.RecyclerView>

</RelativeLayout>